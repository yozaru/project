<%- model_class = Know -%>
<div class="page-header">
<%#  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
  <h1><%= "KnowledgeBaseSystem" %></h1>
</div>
<% i = 0 %>

<form class="navbar-form navbar-right" role="search" method="post" action="/search">
  <div class="form-group">
  <input name="stxt" type="text" class="form-control" placeholder="検索条件を入れてください">
  <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">
  <button type="submit" class="btn btn-default">検索</button>
  </div>
</form>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:タイトル) %></th>
      <th><%= model_class.human_attribute_name(:会社名) %></th>
      <th><center><%= model_class.human_attribute_name(:内容) %></center></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @knows.each do |know| i+=1 %>
      <tr>
<%#        < td><%= link_to know.id, know_path(know) %></td>
        <td><%= i %></td>
        <td width="200"><%= know.title %></td>
        <td width="100"><%= know.company %></td>
<%#        <td width="500"><%= simple_format(know.body) %></td>
        <td width="500" height="10%"><%= know.body[0,40] %></td>
        <td>
         <%= link_to t('.edit', :default => t("helpers.links.edit")),
         edit_know_path(know), :class => 'btn btn-default btn-xs' %>
         <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      know_path(know),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_know_path,
            :class => 'btn btn-primary' %>
